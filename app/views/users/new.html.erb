<% provide(:title,"Регистрация") %>
<h1 class="h_spacing">Регистрация</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= render 'shared/error_messages', object: f.object %>
      <%= f.label :username, "Логин" %>
      <%= f.text_field :username, class: 'form-control' %>

      <%= f.label :email, "Почта" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password, "Пароль" %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :password_confirmation, "Подтвердите пароль"%>
      <%= f.password_field :password_confirmation, class: 'form-control' %>

      <%= f.submit "Создать аккаунт", class: "btn content_btn submit_btn"%>
    <% end %>
  </div>
</div>